<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/opaque_light_grey</item>
        <item name="colorAccent">@color/black</item>
        <item name="drawerArrowStyle">@style/ArrowTheme</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTitleTheme</item>
    </style>

    <style name="ActionBarTitleTheme" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArrowTheme" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

</resources>
